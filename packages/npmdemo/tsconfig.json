{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "../../",
        "declaration": true,
        "baseUrl": "../../"
    },
    "include": [
        "src/**/*",
        "../core/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}