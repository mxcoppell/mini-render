{
    "name": "mini-renderer",
    "version": "0.1.1",
    "description": "A lightweight TypeScript package for rendering markdown with code highlighting, LaTeX math, and theme support",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc && cp src/styles/*.css dist/styles/",
        "test": "jest",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "markdown",
        "renderer",
        "syntax-highlighting",
        "latex",
        "math",
        "code-blocks",
        "themes",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mxcoppell/mini-renderer.git"
    },
    "author": "Mini-Renderer Contributors",
    "license": "MIT",
    "dependencies": {
        "marked": "^9.1.5",
        "prismjs": "^1.29.0"
    },
    "peerDependencies": {
        "mathjax": "^3.2.2"
    },
    "devDependencies": {
        "@types/marked": "^5.0.1",
        "@types/node": "^20.8.7",
        "@types/prismjs": "^1.26.1",
        "typescript": "^5.2.2"
    }
}