{
    "name": "mini-render-demo",
    "private": true,
    "version": "0.1.0",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "ts-node-dev --respawn src/server.ts",
        "dev:client": "webpack --watch --mode development",
        "build": "webpack --mode production && tsc",
        "start": "node dist/server.js"
    },
    "dependencies": {
        "express": "^4.21.2",
        "mini-render": "file:../core"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^20.8.7",
        "concurrently": "^8.2.0",
        "css-loader": "^6.8.1",
        "style-loader": "^3.3.3",
        "ts-loader": "^9.4.4",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}